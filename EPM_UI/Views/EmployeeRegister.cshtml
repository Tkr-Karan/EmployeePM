



<form>

    <div class="form-group">
        <label for="exampleInputEmployeeName">Employee Name</label>
        <input type="text" class="form-control" placeholder="Enter Employee Name">
    </div>

    <div class="form-group">
        <label for="exampleInputEmpCode">Employee Code</label>
        <input type="text" class="form-control" placeholder="Enter Employee Code">
    </div>

    <div class="form-group">
        <label for="exampleInputEmail">Email address</label>
        <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter Email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>

    <div class="form-group">
        <label for="exampleInputPhone">Mobile</label>
        <input type="number" class="form-control" placeholder="Enter Mobile">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>